<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_titre_niveau_ligne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Niveau 1 - 4 lettres"
        android:paddingLeft="25dp"
        android:layout_margin="5dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        />

    <TextView
        android:id="@+id/tv_progression_niveau_ligne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_titre_niveau_ligne"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Progression"
        android:paddingLeft="50dp"
        android:layout_margin="5dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        />

    <Button
        android:id="@+id/btn_reinitialiser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RÃ©initialisation"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_progression_niveau_ligne"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onClickReinitialisationNiveau"
        />


</androidx.constraintlayout.widget.ConstraintLayout>